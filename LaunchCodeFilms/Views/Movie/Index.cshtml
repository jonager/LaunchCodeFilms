@using Microsoft.AspNetCore.Identity
@using LaunchCodeFilms.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<header class="heroSection">
    <div class="dark-overlay">
        <div class="container heroMovie">
            <div class="row">
                <div class="col-lg-4">
                    <img width="330" class="hero-poster" src="#" alt="movie poster" />
                </div>
                <div class="col-lg-8 pl-0">
                    <div class="d-flex flex-wrap">
                        <div class="col-lg-4 pl-0">
                            <h3>Title:</h3>
                            <p class="hero-title pl-1"></p>
                            <h3>Director:</h3>
                            <p class="hero-director pl-1"></p>
                            <h3>Main Cast:</h3>
                            <p class="hero-cast pl-1"></p>
                        </div>
                        <div class="col-lg-8 heroActions">
                            <div class="dropdown">
                                <a class="dropdown-toggle no_click rate" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="#"><i class="material-icons" data-toggle="tooltip" data-placement="bottom" title="<b>Rate!</b>" data-html="true">stars</i></a>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" href="#" data-movieidapi="" data-userid="@UserManager.GetUserId(User)" data-rating="0" onclick="setRating(this)">Remove Rating</a>
                                    <a class="dropdown-item" href="#" data-movieidapi="" data-userid="@UserManager.GetUserId(User)" data-rating="1" onclick="setRating(this)">&#9733</a>
                                    <a class="dropdown-item" href="#" data-movieidapi="" data-userid="@UserManager.GetUserId(User)" data-rating="2" onclick="setRating(this)">&#9733&#9733</a>
                                    <a class="dropdown-item" href="#" data-movieidapi="" data-userid="@UserManager.GetUserId(User)" data-rating="3" onclick="setRating(this)">&#9733&#9733&#9733</a>
                                    <a class="dropdown-item" href="#" data-movieidapi="" data-userid="@UserManager.GetUserId(User)" data-rating="4" onclick="setRating(this)">&#9733&#9733&#9733&#9733</a>
                                    <a class="dropdown-item" href="#" data-movieidapi="" data-userid="@UserManager.GetUserId(User)" data-rating="5" onclick="setRating(this)">&#9733&#9733&#9733&#9733&#9733</a>
                                </div>
                            </div>
                            <a class="no_click favorite" data-movieidapi="" data-userid="@UserManager.GetUserId(User)" onclick="addToFavorite(this)" href="#"><i class="material-icons" data-toggle="tooltip" data-placement="bottom" title="<b>Mark as favorite</b>" data-html="true">favorite_border</i></a>
                            <a class="no_click watched" data-movieidapi="" data-userid="@UserManager.GetUserId(User)" onclick="addToWatched(this)" href="#"><i class="material-icons" data-toggle="tooltip" data-placement="bottom" title="<b>Marked as watched</b>" data-html="true">remove_red_eye</i></a>
                            <a class="no_click watchlist" data-movieidapi="" data-userid="@UserManager.GetUserId(User)" onclick="addToWatchlist(this)" href="#"><i class="material-icons" data-toggle="tooltip" data-placement="bottom" title="<b>Add to watchlist</b>" data-html="true">watch_later</i></a>
                            @*<a class="no_click watched" data-movieidapi="857" data-userid="3" onclick="addToNotify(this)" href="#"><i class="material-icons" data-toggle="tooltip" data-placement="bottom" title="<b>Notify me when released</b>" data-html="true">theaters</i></a>*@
                        </div>
                        <div class="align-self-end">
                            <h3>Overview:</h3>
                            <p class="overview pl-1"></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

