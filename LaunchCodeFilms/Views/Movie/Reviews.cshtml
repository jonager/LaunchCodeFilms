@using Microsoft.AspNetCore.Identity
@using LaunchCodeFilms.Models
@model LaunchCodeFilms.Models.AddReviewViewModel;

@inject SignInManager<ApplicationUser> SignInManager

<section class="reviews">
    <div class="container">
        <div class="row">
            <div class="col-3">
                @if (SignInManager.IsSignedIn(User))
                 {
                    <a class="btn btn-info mt-5" asp-controller="Movie" asp-action="AddReview"><i class="material-icons">create</i>Add a review</a>
                 }
                else
                {
                    <a href="/Account/Login" class="btn btn-info">Log in to review</a>
                }
            </div>
            <div class="col-9 review-list">

            </div>
        </div>
    </div>
</section>