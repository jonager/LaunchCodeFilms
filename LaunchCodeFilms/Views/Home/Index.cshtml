@{
    ViewData["Title"] = "Rocket Films";

}
@using Microsoft.AspNetCore.Identity
@using LaunchCodeFilms.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<header class="hero-carousel p-5">
    <div class="dark-overlay">
        <div class="container">
            <div id="slider" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li class="active" data-target="#slider" data-slide-to="0"></li>
                    <li data-target="#slider" data-slide-to="1"></li>
                    <li data-target="#slider" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item active">
                        <img class="d-block img-fluid" src="" alt="First Slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h3 class="movie-title pb-5">Slide 1</h3>
                            <a class="btn btn-danger hero-movie"  data-id="" href="/Movie">Read More</a>
                        </div>
                    </div>

                    <div class="carousel-item">
                        </a>
                        <img class="d-block img-fluid" src="" alt="Second Slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h3 class="movie-title pb-5">Slide 2</h3>
                            <a class="btn btn-danger hero-movie" data-id="" href="/Movie">Read More</a>
                        </div>
                    </div>

                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="" alt="Third Slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h3 class="movie-title pb-5">Slide 3</h3>
                            <a class="btn btn-danger hero-movie" data-id=""  href="/Movie">Read More</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<section class="options-movies p-3">
    <div>
        <div class="container ">
            <a  class="mr-5 no_click" href="#" onclick="togglePopular(this)">Popular</a>
            <a  class="mr-5 no_click" href="#" onclick="toggleUpcoming(this)">Upcoming Releases</a>
        </div>
    </div>
</section>

<section id="popular" class="popular-list p-5 display-block">
    <div class="container">
        <div class="row">
            <div class="col-4">
                <div class="card">
                    <img class="card-img-top popimg" src="" alt="Card image cap">
                    <div class="card-body">
                        <h4 class="card-title poptitle"></h4>
                        <p class="card-text poptext"></p>
                        <a class="btn btn-outline-primary btn-block pop" href="/Movie">Read More</a>
                    </div>
                </div>
            </div>
            <div class="col-4 mt-5">
                <div class="card">
                    <img class="card-img-top popimg" src="" alt="Card image cap">
                    <div class="card-body">
                        <h4 class="card-title poptitle"></h4>
                        <p class="card-text poptext"></p>
                        <a class="btn btn-outline-primary btn-block pop" href="/Movie">Read More</a>
                    </div>
                </div>
            </div>
            <div class="col-4">
                <div class="card">
                    <img class="card-img-top popimg" src="" alt="Card image cap">
                    <div class="card-body">
                        <h4 class="card-title poptitle"></h4>
                        <p class="card-text poptext"></p>
                        <a class="btn btn-outline-primary btn-block pop" href="/Movie">Read More</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<section id="upcoming" class="upcoming-list p-5 display-none">
    <div class="container">
        <div class="row">
            <div class="col-4">
                <div class="card">
                    <img class="card-img-top upimg" src="" alt="card image cap">
                    <div class="card-body">
                        <h4 class="card-title uptitle"></h4>
                        <p class="card-text uptext"></p>
                        <a class="btn btn-outline-primary btn-block up" href="/Movie">Read More</a>
                    </div>
                </div>
            </div>
            <div class="col-4 mt-5">
                <div class="card">
                    <img class="card-img-top upimg" src="" alt="card image cap">
                    <div class="card-body">
                        <h4 class="card-title uptitle"></h4>
                        <p class="card-text uptext"></p>
                        <a class="btn btn-outline-primary btn-block up" href="/Movie">Read More</a>
                    </div>
                </div>
            </div>
            <div class="col-4">
                <div class="card">
                    <img class="card-img-top upimg" src="" alt="card image cap">
                    <div class="card-body">
                        <h4 class="card-title uptitle"></h4>
                        <p class="card-text uptext"></p>
                        <a class="btn btn-outline-primary btn-block up" href="/Movie">Read More</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    $('#slider').carousel({
        interval:3500,
        pause: "hover"
        // wrap: false prevent images from wrapping around
    });

    function togglePopular(e) {
      
        var popular = document.getElementById("popular");
        var upcoming = document.getElementById("upcoming");

        popular.classList.remove("display-none");
        popular.classList.add("display-block");

        upcoming.classList.remove("display-block");
        upcoming.classList.add("display-none");
    }

    function toggleUpcoming(e) {

        var popular = document.getElementById("popular");
        var upcoming = document.getElementById("upcoming");

        popular.classList.remove("display-block");
        popular.classList.add("display-none");

        upcoming.classList.remove("display-none");
        upcoming.classList.add("display-block");
    }
</script>

